<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.microsoft.research.karya.ui.widgets.KaryaToolbar
            android:id="@+id/appTb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showBackButton="true"
            app:startIcon="@drawable/ic_profile"
            app:useCustomAssistant="true" />

        <TextView
            android:id="@+id/screenProgress"
            style="@style/multilineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_64sdp"
            android:text="3/4"
            android:textColor="@color/dk_blue"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appTb" />

        <TextView
            android:id="@+id/ageGroupPromptTv"
            style="@style/multilineTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/select_age_group"
            android:textColor="?attr/appLanguageTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/screenProgress"
            app:layout_constraintTop_toTopOf="@id/screenProgress" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ageGroupPromptTv">

            <androidx.cardview.widget.CardView
                android:id="@+id/age_group_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ageGroupPromptTv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/age_group_1_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_1_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/man_18_25"
                        app:layout_constraintBottom_toTopOf="@id/age_group_1_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_1_rb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_1_image_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/woman_18_25"
                        app:layout_constraintBottom_toTopOf="@id/age_group_1_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_1_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/age_group_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/age_18_25"
                        android:textColor="?attr/appLanguageTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/age_group_1_rb"
                        app:layout_constraintTop_toBottomOf="@id/age_group_1_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/age_group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/age_group_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/age_group_2_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_2_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/man_26_55"
                        app:layout_constraintBottom_toTopOf="@id/age_group_2_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_2_rb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_2_image_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/woman_26_55"
                        app:layout_constraintBottom_toTopOf="@id/age_group_2_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_2_image"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/age_group_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/age_26_55"
                        android:textColor="?attr/appLanguageTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/age_group_2_rb"
                        app:layout_constraintTop_toBottomOf="@id/age_group_2_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/age_group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/age_group_2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/age_group_3_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_3_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/man_56"
                        app:layout_constraintBottom_toTopOf="@id/age_group_3_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_3_rb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/age_group_3_image_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:src="@drawable/woman_56"
                        app:layout_constraintBottom_toTopOf="@id/age_group_3_tv"
                        app:layout_constraintStart_toEndOf="@id/age_group_3_image"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/age_group_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/age_55"
                        android:textColor="?attr/appLanguageTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/age_group_3_rb"
                        app:layout_constraintTop_toBottomOf="@id/age_group_3_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </RadioGroup>

        <TextView
            android:id="@+id/yearofborn"
            style="@style/multilineTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="@string/s_age_prompt"
            android:textColor="?attr/appLanguageTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg" />

        <EditText
            android:id="@+id/ageEt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/blue_rounded_border"
            android:fontFamily="monospace"
            android:hint="----"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="4"
            android:paddingHorizontal="@dimen/_32sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/screenProgress"
            app:layout_constraintTop_toBottomOf="@+id/yearofborn" />

        <FrameLayout
            android:id="@+id/loadingContainer"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/ageEt"
            app:layout_constraintStart_toEndOf="@id/ageEt"
            app:layout_constraintTop_toTopOf="@id/ageEt">

            <ImageView
                android:id="@+id/submitAgeGroupIb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/next"
                app:srcCompat="@drawable/next_arrow_button_selector" />

            <ProgressBar
                android:id="@+id/loadingPb"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/failToRegisterTv"
            style="@style/multilineError"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="@string/s_invalid_otp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadingContainer" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/failToRegisterTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
