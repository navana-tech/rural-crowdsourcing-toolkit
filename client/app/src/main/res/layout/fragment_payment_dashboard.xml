<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.microsoft.research.karya.ui.widgets.KaryaToolbar
            android:id="@+id/appTb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/PaymentsFlowTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_56sdp"
            android:text="@string/payment_dashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appTb" />

        <androidx.cardview.widget.CardView
            android:id="@+id/overviewCv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_16sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/balanceIv"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:layout_constraintBottom_toTopOf="@id/transferredIv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_coins" />

                <TextView
                    android:id="@+id/balanceTv"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:text="@string/balance"
                    app:layout_constraintStart_toEndOf="@id/balanceIv"
                    app:layout_constraintTop_toTopOf="@id/balanceIv" />

                <TextView
                    android:id="@+id/balanceAmountTv"
                    style="@style/PaymentsDashboardAmountStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="@id/balanceIv"
                    app:layout_constraintStart_toEndOf="@id/balanceIv"
                    app:layout_constraintTop_toBottomOf="@id/balanceTv"
                    tools:text="₹100.0" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/transferredIv"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/balanceIv"
                    app:srcCompat="@drawable/ic_transferred" />

                <TextView
                    android:id="@+id/transferredTv"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:text="@string/transferred"
                    app:layout_constraintBottom_toTopOf="@id/transferredAmountTv"
                    app:layout_constraintStart_toEndOf="@id/transferredIv"
                    app:layout_constraintTop_toTopOf="@id/transferredIv" />

                <TextView
                    android:id="@+id/transferredAmountTv"
                    style="@style/PaymentsDashboardAmountStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="@id/transferredIv"
                    app:layout_constraintStart_toEndOf="@id/transferredIv"
                    app:layout_constraintTop_toBottomOf="@id/transferredTv"
                    tools:text="₹100.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <!--    <TextView
                android:id="@+id/nextPaymentTv"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
