<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true">

    <com.microsoft.research.karya.ui.widgets.KaryaToolbar
        android:id="@+id/appTb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        app:backgroundTint="@color/colorWhite"
        app:cutoutMargin="@dimen/_8sdp"
        app:cutoutRoundedCornerRadius="@dimen/_32sdp"
        app:elevation="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_icon"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="start"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_arrow" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/access_code_title_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_88sdp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A very long string to measure the maximument size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fab"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/dk_blue"
            android:elevation="@dimen/_4sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_assistant"
            android:tag="KARYA_ASSISTANT"
            android:visibility="visible"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.CircleShape" />
    </com.microsoft.research.karya.ui.widgets.KaryaToolbar>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_64sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTb"
        app:srcCompat="@drawable/ic_mobile_otp" />

    <TextView
        android:id="@+id/otpPromptTv"
        style="@style/multilineTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:text="@string/s_otp_prompt"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon" />

    <EditText
        android:id="@+id/otpEt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:background="@drawable/blue_rounded_border"
        android:fontFamily="monospace"
        android:hint="@string/otp_hint"
        android:inputType="number"
        android:maxLength="6"
        android:paddingHorizontal="@dimen/_32sdp"
        android:textSize="@dimen/_26ssp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@+id/otpPromptTv" />

    <FrameLayout
        android:id="@+id/loadingContainer"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/otpEt"
        app:layout_constraintStart_toEndOf="@id/otpEt"
        app:layout_constraintTop_toTopOf="@id/otpEt"
        app:layout_constraintHorizontal_bias="1.0">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/otpNextIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/next_arrow_button_selector"
            android:contentDescription="@string/next" />

        <ProgressBar
            android:id="@+id/loadingPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <Button
        android:id="@+id/resendOTPBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textColor="@color/resend_otp_button_text_color_selector"
        android:background="@android:color/transparent"
        android:text="@string/s_resend_otp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/otpStatusIv"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:contentDescription="@string/status_check"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/resendOTPBtn"
        app:layout_constraintTop_toBottomOf="@id/resendOTPBtn"
        app:srcCompat="@drawable/ic_check_grey" />

    <TextView
        android:id="@+id/invalidOTPTv"
        style="@style/multilineError"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text="@string/s_invalid_otp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:minHeight="@dimen/_35sdp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/otpStatusIv"
        app:layout_constraintTop_toTopOf="@id/otpStatusIv"/>

</androidx.constraintlayout.widget.ConstraintLayout>
