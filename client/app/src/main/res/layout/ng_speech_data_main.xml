    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:background="@color/colorGreenDarker"
        android:contentDescription="@string/back"
        android:elevation="@dimen/_4sdp"
        android:scaleType="center"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@id/recordBtn"
        app:layout_constraintEnd_toStartOf="@id/recordBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recordBtn"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleShape"
        app:srcCompat="@drawable/ic_prev" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recordBtn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@color/purple_500"
        android:contentDescription="@string/back"
        android:elevation="@dimen/_4sdp"
        android:scaleType="centerInside"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/backBtn"
        app:layout_constraintRight_toLeftOf="@id/nextBtn"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleShape"
        app:srcCompat="@drawable/ic_mic" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/nextBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/colorGreenDarker"
        android:contentDescription="@string/back"
        android:elevation="@dimen/_4sdp"
        android:scaleType="centerInside"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="@id/recordBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recordBtn"
        app:layout_constraintTop_toTopOf="@id/recordBtn"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleShape"
        app:srcCompat="@drawable/ic_next" />

    <ImageView
        android:id="@+id/sentencePointerIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/ic_pointer"
        android:elevation="@dimen/_20sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/sentenceTv"
        app:layout_constraintEnd_toEndOf="@id/sentenceTv" />

    <ImageView
        android:id="@+id/backPointerIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/ic_pointer"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/backBtn"
        app:layout_constraintLeft_toLeftOf="@id/backBtn"
        app:layout_constraintRight_toRightOf="@id/backBtn" />

    <ImageView
        android:id="@+id/recordPointerIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/ic_pointer"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/recordBtn"
        app:layout_constraintLeft_toLeftOf="@id/recordBtn"
        app:layout_constraintRight_toRightOf="@id/recordBtn"
        app:layout_constraintTop_toBottomOf="@id/recordLengthLL" />

    <ImageView
        android:id="@+id/playPointerIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/ic_pointer"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/playBackLl"
        app:layout_constraintLeft_toLeftOf="@id/playBackLl" />

    <ImageView
        android:id="@+id/nextPointerIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/ic_pointer"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        app:layout_constraintLeft_toLeftOf="@id/nextBtn"
        app:layout_constraintRight_toRightOf="@id/nextBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>