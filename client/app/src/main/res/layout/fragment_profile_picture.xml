<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.microsoft.research.karya.ui.widgets.KaryaToolbar
        android:id="@+id/appTb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showBackButton="true"
        app:startIcon="@drawable/ic_profile" />

    <TextView
        android:id="@+id/screenProgress"
        style="@style/multilineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_64sdp"
        android:text="1/3"
        android:textColor="@color/dk_blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTb" />

    <TextView
        android:id="@+id/profilePicturePromptTv"
        style="@style/multilineTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:text="@string/s_profile_pic_title"
        android:textColor="?attr/appLanguageTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/screenProgress"
        app:layout_constraintTop_toTopOf="@id/screenProgress" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mainProfilePictureIv"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/dashed_background"
        android:contentDescription="@string/profile_picture"
        android:scaleType="centerInside"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RounderCorners"
        app:layout_constraintBottom_toTopOf="@id/loadingContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicturePromptTv"
        app:srcCompat="@drawable/ic_camera_colored" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_rotate_left"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/rotate_semi_transparent_background"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/mainProfilePictureIv"
        app:layout_constraintEnd_toStartOf="@id/iv_rotate_right"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/mainProfilePictureIv"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleShape"
        app:srcCompat="@drawable/ic_rotate_left" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_rotate_right"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/rotate_semi_transparent_background"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/mainProfilePictureIv"
        app:layout_constraintEnd_toEndOf="@id/mainProfilePictureIv"
        app:layout_constraintStart_toEndOf="@id/iv_rotate_left"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleShape"
        app:srcCompat="@drawable/ic_rotate_right" />

    <FrameLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintStart_toEndOf="@id/retakeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed">

        <Button
            android:id="@+id/profilePictureNextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/next_rounded_button_selector"
            android:contentDescription="@string/next"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="@dimen/_2sdp"
            android:elevation="@dimen/_4sdp"
            android:paddingStart="@dimen/_24sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:text="@string/s_next"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/loadingPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retakeButton"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/retake_rounded_button_selector"
        android:contentDescription="@string/retake"
        android:drawableStart="@drawable/ic_retake"
        android:drawablePadding="@dimen/_4sdp"
        android:elevation="@dimen/_4sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="@string/retake"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loadingContainer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
